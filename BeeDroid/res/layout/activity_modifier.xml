<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exa.test.Modifier" >
    
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="500dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:orientation="horizontal" >

         <EditText
             android:id="@+id/nomprenom"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView2"
             android:layout_centerHorizontal="true"
             android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
             android:inputType="textPersonName"
             android:textSize="@dimen/abc_text_size_small_material" >

             <requestFocus />
         </EditText>

         <TextView
             android:id="@+id/textView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/nomprenom"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="16dp"
             android:text="Mot de passe"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/mdp"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView3"
             android:layout_centerHorizontal="true"
              android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
              android:textSize="@dimen/abc_text_size_small_material"
             android:inputType="textPassword" />

         <EditText
             android:id="@+id/cmdp"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView4"
              android:textSize="@dimen/abc_text_size_small_material"
             android:layout_centerHorizontal="true"
              android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
             android:inputType="textPassword" />

         <EditText
             android:id="@+id/email"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView45"
             android:layout_centerHorizontal="true"
              android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
              android:textSize="@dimen/abc_text_size_small_material"
             android:inputType="textPersonName" />

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/email"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:text="Adresse"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/adresse"
             android:layout_width="200dp"
             android:layout_height="50dp"
              android:textSize="@dimen/abc_text_size_small_material"
             android:layout_below="@+id/textView6"
             android:layout_centerHorizontal="true"
              android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
             android:inputType="textPostalAddress" />

         <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/adresse"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="21dp"
             android:text="Téléphone"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/phone"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView7"
             android:layout_centerHorizontal="true"
              android:background="@drawable/fieldfirst"
             android:ems="10"
              android:gravity="center"
              android:textSize="@dimen/abc_text_size_small_material"
             android:inputType="textPersonName" />

         <TextView
             android:id="@+id/textView45"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="E-mail"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/TextViewUSB"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="15dp"
             android:text="Compte"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/TextViewUSB"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="36dp"
             android:text="Nom et prénom"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/mdp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="14dp"
             android:text="Confirmation mot de passe"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <Button
             android:id="@+id/btnValider"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/textView2"
             android:background="@drawable/btnfirst"
             android:text="Valider" />

         <Button
             android:id="@+id/btnAnnuler"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:layout_alignParentBottom="true"
             android:layout_toLeftOf="@+id/textView2"
             android:background="@drawable/btnfirst"
             android:text="Annuler" />
    
    </RelativeLayout>
    
</RelativeLayout>
