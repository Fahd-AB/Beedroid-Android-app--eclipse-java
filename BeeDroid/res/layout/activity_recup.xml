<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exa.test.RecupActivity" >

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="550dp"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:gravity="center"
       android:orientation="horizontal" >

        <EditText
            android:id="@+id/fieldname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fieldfirst"
          android:gravity="center"
            android:ems="10"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/fieldmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
             android:background="@drawable/fieldfirst"
          android:gravity="center"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fieldlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView45"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fieldfirst"
          android:gravity="center"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fieldlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

<EditText
    android:id="@+id/fieldrep1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/TextViewUSB"
    android:layout_below="@+id/planets_spinner"
    android:layout_marginTop="14dp"
   android:background="@drawable/fieldfirst"
          android:gravity="center"
    android:ems="10" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView45"
    android:layout_below="@+id/fieldname"
    android:text="Email"
    android:textAppearance="?android:attr/textAppearanceSmall" />

<TextView
    android:id="@+id/textView45"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fieldmail"
    android:layout_centerHorizontal="true"
    android:text="Login"
    android:textAppearance="?android:attr/textAppearanceSmall" />

<EditText
    android:id="@+id/fieldrep2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/fieldlogin"
    android:layout_alignRight="@+id/fieldrep1"
    android:layout_below="@+id/q2"
    android:layout_marginTop="20dp"
     android:background="@drawable/fieldfirst"
          android:gravity="center"
    android:ems="10" />

<TextView
    android:id="@+id/TextViewUSB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:text="Récupération mot de passe"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android:id="@+id/fieldrep3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/fieldrep2"
    android:layout_below="@+id/q3"
    android:layout_marginTop="14dp"
    android:background="@drawable/fieldfirst"
    android:ems="10"
    android:gravity="center" />

<Spinner
    android:id="@+id/planets_spinner"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_below="@+id/textView7"
    android:layout_centerHorizontal="true"
   android:background="@drawable/spinnerstyle"
    android:gravity="center"
    android:textAlignment="center" />

<Spinner
    android:id="@+id/q3"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_below="@+id/fieldrep2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:background="@drawable/spinnerstyle"
    android:gravity="center" />

<Spinner
    android:id="@+id/q2"
    android:layout_width="320dp"
    android:layout_height="25dp"
    android:layout_below="@+id/fieldrep1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/spinnerstyle"
    android:gravity="center" />

<TextView
    android:id="@+id/username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/TextViewUSB"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="33dp"
    android:text="Nom et pénom"
    android:textAppearance="?android:attr/textAppearanceSmall" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/textView6"
    android:layout_centerHorizontal="true"
    android:text="Questions de sécurité "
    android:textAppearance="?android:attr/textAppearanceSmall" />

<Button
    android:id="@+id/btnenvoyer"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/username"
    android:background="@drawable/btnfirst"
    android:text="Envoyer" />

<Button
    android:id="@+id/btninfo"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/username"
    android:background="@drawable/btnfirst"
    android:text="Annuler" />

       </RelativeLayout>

</RelativeLayout>
