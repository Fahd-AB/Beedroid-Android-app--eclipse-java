<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exa.test.IndexActivity" >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="500dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:background="@color/defaultc"
         android:gravity="center"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/TextViewUSB"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="34dp"
             android:text="BeeDroid"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="@color/green"
             android:textSize="@dimen/abc_text_size_large_material" />

         <Button
             android:id="@+id/btncompte"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="wrap_content"
             android:layout_height="26dp"
             android:layout_above="@+id/textView45"
             android:layout_alignLeft="@+id/textView2"
             android:layout_alignRight="@+id/textView2"
             android:layout_marginBottom="18dp"
             android:background="@drawable/btn"
             android:text="Connexion" />

         <TextView
             android:id="@+id/username"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView2"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="18dp"
             android:text="Login"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/login1"
             android:layout_width="220dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/username"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="22dp"
             android:background="@drawable/st"
             android:ems="10"
             android:gravity="center"
             android:inputType="textPersonName"
             android:textSize="@dimen/abc_text_size_small_material" >

             <requestFocus />
         </EditText>

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/TextViewUSB"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="42dp"
             android:text="Connectez-vous"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/login1"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="18dp"
             android:text="Mot de passe"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <EditText
             android:id="@+id/password1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/login1"
             android:layout_alignRight="@+id/login1"
             android:layout_below="@+id/textView4"
             android:layout_marginTop="20dp"
             android:background="@drawable/st"
             android:ems="10"
             android:gravity="center"
             android:inputType="textPassword"
             android:textSize="@dimen/abc_text_size_small_material" />

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="88dp"
             android:text="Besoin d&apos;aide ?"
             android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
             android:id="@+id/textView45"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/textView6"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="18dp"
             android:text="Mot de passe oubliÃ© ?"
             android:textAppearance="?android:attr/textAppearanceSmall" />
    
    </RelativeLayout>
    
</RelativeLayout>
